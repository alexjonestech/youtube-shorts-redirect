{
  "manifest_version": 3,
  "name": "YouTube Redirect",
  "version": "1.0",
  "description": "Redirect from YouTube Shorts to the regular watch page with a styled button.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/shorts/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "YouTube Shorts Redirect",
    "default_popup": "popup.html"
  }
}
